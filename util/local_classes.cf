bundle common local_classes {
  vars:
    "class_files" string => "/usr/local/etc/cfengine/classes.txt";
    "class_strs"  slist  => readstringlist("$(class_file)"
                                         , "#.*$"
					 , "\s+"
					 , "inf"
					 , "inf");

  classes:
    "$(class_strs)" expression => "any";

  reports:
    "class set: $(class_strs)";
}
