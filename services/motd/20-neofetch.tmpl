#!/bin/sh
# managed by cfengine

# fix colours
export TERM=xterm-256color
tput sgr0

echo "--------------------------------------"

neofetch --config "/usr/local/etc/neofetch.conf" \
--off --memory_percent on --disk_percent on --cpu_temp C \
| grep -v 'Red Hat' \
| awk 'NF {print $0}' \
| grep --fixed-strings -v '7h' # remove blank lines

tput sgr0
echo "--------------------------------------"
