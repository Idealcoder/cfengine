#!/bin/sh
# managed by cfengine

# fix colours
export TERM=xterm-256color
tput sgr0

echo    "-------------------------------------"

neofetch --off --config /usr/local/etc/neofetch.conf \ 
--colour_blocks off \
--memory_percent on --disk_percent on --cpu_temp C \
| grep -v 'red hat' \
| awk 'NF {print $0}' \
| grep --fixed-strings -v '7h' # remove blank lines

tput sgr0
echo -n "-------------------------------------"
