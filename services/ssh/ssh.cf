bundle agent ssh {
  packages:
    "openssh-server"
      policy => "present";

  files:
    "/etc/ssh/sshd_config"
      edit_template => "$(this.promise_dirname)/sshd_config.tmpl",
      acl => readable,
      classes => if_repaired("restart_sshd");

  services:
    restart_sshd::
      "ssh"
        service_policy => "restart";

  reports:
    restart_sshd::
      "ssh server restarted";
}

