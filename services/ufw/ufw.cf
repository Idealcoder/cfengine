bundle agent ufw {
  packages:
    "ufw"
      policy => "present";
      
  files:
    "/etc/ufw/user.rules"
      edit_line => rules("ufw");
    "/etc/ufw/user6.rules"
      edit_line => rules("ufw6");
}

bundle edit_line rules(type) {
  insert_lines:
    "$(this.promise_dirname)/rules.tmpl"
      insert_type => "file_preserve_block",
      expand_scalars => "true",
      location => loc;
}

body location loc {
  select_line_matching => "### RULES ###";
  before_after => "after";
}
