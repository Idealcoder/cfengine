bundle agent ufw {
  packages:
    "ufw"
      policy => "present";
      
  files:
    "/etc/ufw/user.rules"
      edit_line => rules4;
#   "/etc/ufw/user6.rules"
#     edit_line => rules6;
}

bundle edit_line rules4 {
  insert_lines:
    "$(promiser.directories)/rules.tmpl"
      insert_type => "file_preserve_block",
      location => loc;
}

body location loc {
  select_line_matching => "### RULES ###";
  before_after => "after";
}
