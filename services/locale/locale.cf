bundle agent locale {
  vars:
    "locale_value" string => "en_GB.UTF-8 UTF-8";
    "locale_current" string => readfile("/etc/default/locale");

  classes:
    "locale_set" expression => strcmp("$(locale_value)", "$(locale_current)");

  commands:
    !locale_set::
      "/usr/sbin/update-locale LANG=$(locale_value)";
}
