bundle agent sysctl {
  files:
    "/etc/sysctl.d/local.conf"
      create => "true",
      perms => readable("root"),
      edit_template => "$(this.promise_dirname)/local.conf.tmpl",
      classes => if_repaired("reload_sysctl");

  commands:
    reload_sysctl::
      "/usr/sbin/sysctl --system --quiet";

  reports:
    reload_sysctl::
      "sysctl rules reloaded";
}
