body file control {

  inputs => { "roles/debian/debian.cf"
	    , "roles/remote/remote.cf"
	    , "roles/lxdhost/lxdhost.cf"
	    , "roles/minecraft/minecraft.cf"};
}

bundle agent roles {
  methods:
    role_debian||debian::
     "debian" usebundle => debian;

    role_remote::
      "remote" usebundle => remote;

    role_lxdhost::
      "lxdhost" usebundle => lxdhost;

    role_minecraft::
      "minecraft" usebundle => minecraft;
}
